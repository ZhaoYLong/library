{
  "compilerOptions": {
    "outDir": "lib/esm", // 输出文件夹
    "module": "esnext", // 设置编译代码的模块系统
    "target": "es5", // 期望编译 TypeScript 到 ECMAScript 的目标版本
    "lib": ["es6", "dom", "es2016", "es2017"], // 要支持的内置js库
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"], // 编译器要扫描的文件
  "exclude": ["node_modules", "lib"] // 编译器要忽略的文件
}